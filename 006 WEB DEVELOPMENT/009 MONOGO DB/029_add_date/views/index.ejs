<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chats</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            margin: 0;
            padding: 20px;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .chat-box {
            background: white;
            border-radius: 8px;
            padding: 15px;
            margin: 10px auto;
            max-width: 500px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .chat-box p {
            margin: 5px 0;
            font-size: 15px;
        }

        .chat-box p span {
            font-weight: bold;
            color: #444;
        }

        hr {
            border: none;
            border-top: 1px solid #ddd;
            margin: 10px 0 0 0;
        }
    </style>
</head>

<body>

    <form method="GET" action="/chats/new">
        <button>New chat</button>
    </form>

    <h3>All Chats</h3>

    <% for(let chat of chats) { %>
        <div class="chat-box">
            <p><span>From:</span>
                <%= chat.from %>
            </p>
            <p><span>Message:</span>
                <%= chat.msg %>
            </p>
            <p><span>Received by:</span>
                <%= chat.to %>
            </p>
            <hr>
        </div>
        <% } %>

</body>

</html>